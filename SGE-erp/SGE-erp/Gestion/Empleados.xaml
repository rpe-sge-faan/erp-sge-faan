<UserControl
    x:Class="SGE_erp.Gestion.Empleados"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Gestion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="14*" />
        </Grid.RowDefinitions>

        <Menu
            x:Name="menu"
            Grid.Row="0"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">

            <MenuItem
                x:Name="anadirEmpl"
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Anadir_Click"
                Header="_Añadir" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Editar_Click"
                Header="_Editar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Borrar_Click"
                Header="_Borrar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Buscar_Click"
                Header="B_uscar" />
            <MenuItem
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Actualizar_Click"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">
                <MenuItem.Header>
                    <Image Width="15px" Source="/imagenes/refresh.png" />
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <DataGrid
            x:Name="dataGridEmpleados"
            Grid.Row="1"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            CanUserAddRows="True"
            ColumnWidth="1*"
            IsReadOnly="True"
            SelectionMode="Single"
            AutoGeneratingColumn="dataGridEmpleados_AutoGeneratingColumn"/>

    </Grid>
</UserControl>
