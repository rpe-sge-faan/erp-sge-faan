<UserControl
    x:Class="SGE_erp.Gestion.GestionMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Gestion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="IndianRed"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl
            x:Name="tabControl"
            Margin="5,5,5,5"
            TabStripPlacement="Bottom">
            <TabItem
                Width="100"
                Margin="0,5,5,5"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Proveedores" />
            <TabItem
                Width="100"
                Margin="0,5,5,5"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Clientes" />
            <TabItem
                Width="100"
                Margin="0,5,5,5"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Empleados" />
        </TabControl>
    </Grid>
</UserControl>
