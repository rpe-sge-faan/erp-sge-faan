<UserControl
    x:Class="SGE_erp.Gestion.ProveedoresMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Gestion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="14*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu
            x:Name="menu"
            Grid.Row="0"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">

            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Añadir" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Editar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Borrar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="B_uscar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Listado" />
            <MenuItem
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <MenuItem.Header>
                    <Image
                        Width="15"
                        Height="15"
                        Source="/images/logout.png" />
                </MenuItem.Header>
            </MenuItem>

        </Menu>

        <DataGrid
            x:Name="dataGrid"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AlternationCount="2"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            ItemsSource="{Binding PdfFiles}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1*" Header="Código" />
                <DataGridTextColumn Width="6*" Header="Nombre del Proveedor" />

            </DataGrid.Columns>
        </DataGrid>
        <Label
            x:Name="labelReg"
            Grid.Row="2"
            Width="46"
            Height="18"
            Margin="10,3,0,0"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Registro:" />
        <Button
            x:Name="bFirst"
            Grid.Row="2"
            Width="25"
            Height="18"
            Margin="61,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image Source="images/back.png" />
        </Button>
        <Button
            x:Name="bAnterior"
            Grid.Row="2"
            Width="25"
            Height="18"
            Margin="91,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image Source="images/left-arrow.png" />
        </Button>
        <Button
            x:Name="bNext"
            Grid.Row="2"
            Width="25"
            Height="18"
            Margin="198,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image RenderTransformOrigin="0.5,0.5" Source="images/left-arrow.png">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1" ScaleY="1" />
                        <SkewTransform AngleX="0" AngleY="0" />
                        <RotateTransform Angle="0" />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
        <Button
            x:Name="bLast"
            Grid.Row="2"
            Width="25"
            Height="18"
            Margin="228,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image RenderTransformOrigin="0.5,0.5" Source="images/back.png">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1" ScaleY="1" />
                        <SkewTransform AngleX="0" AngleY="0" />
                        <RotateTransform Angle="0" />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Button>
        <TextBox
            x:Name="textBox"
            Grid.Row="2"
            Width="72"
            Height="18"
            Margin="121,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <Label
            x:Name="labNum"
            Grid.Row="2"
            Width="46"
            Height="18"
            Margin="262,3,0,0"
            Padding="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="de 0" />
    </Grid>
</UserControl>
