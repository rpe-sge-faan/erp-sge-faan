<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Gestion"
    xmlns:SGE_erp="clr-namespace:SGE_erp"
    x:Class="SGE_erp.Gestion.ClientesMain"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded_1">
    <UserControl.Resources>
        <SGE_erp:SetaData
            x:Key="setaData" />
        <CollectionViewSource
            x:Key="clientesViewSource"
            Source="{Binding Clientes, Source={StaticResource setaData}}" />
    </UserControl.Resources>
    <Grid
        DataContext="{StaticResource clientesViewSource}">
        <Grid.Background>
            <SolidColorBrush
                Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="14*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu
            x:Name="menu"
            Grid.Row="0"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">

            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Añadir"
                Click="MenuItem_Click" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Editar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Borrar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="B_uscar" />
            <MenuItem
                Width="50"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Listado" />
        </Menu>
        <DataGrid
            x:Name="clientesDataGrid"
            AutoGenerateColumns="False"
            EnableRowVirtualization="True"
            ItemsSource="{Binding}"
            Margin="0"
            Grid.Row="1"
            RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="id_ClienteColumn"
                    Binding="{Binding Id_Cliente}"
                    Header="Id Cliente"
                    IsReadOnly="True"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="tipoColumn"
                    Binding="{Binding Tipo}"
                    Header="Tipo"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="nombreColumn"
                    Binding="{Binding Nombre}"
                    Header="Nombre"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="telefonoColumn"
                    Binding="{Binding Telefono}"
                    Header="Telefono"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="emailColumn"
                    Binding="{Binding Email}"
                    Header="Email"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="direccionColumn"
                    Binding="{Binding Direccion}"
                    Header="Direccion"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="personaContactoColumn"
                    Binding="{Binding PersonaContacto}"
                    Header="Persona Contacto"
                    Width="SizeToHeader" />
                <DataGridTextColumn
                    x:Name="nIFColumn"
                    Binding="{Binding NIF}"
                    Header="NIF"
                    Width="SizeToHeader" />
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</UserControl>
