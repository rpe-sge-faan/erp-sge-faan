<UserControl x:Class="SGE_erp.Venta.VentasVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGE_erp.Venta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Left" Height="350" Grid.Row="1" VerticalAlignment="Top" Width="776" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Id" Width="100" />
                <DataGridTextColumn Header ="Fecha Venta" Width="*" />
                <DataGridTextColumn Header ="Precio Total" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Menu HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="776">
            <MenuItem x:Name="buscar" Header=" _Buscar" Height="46" Width="80" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <MenuItem x:Name="listado" Header=" _Listado" Height="46" Width="80" FontSize="18"/>
        </Menu>
        <Button HorizontalAlignment="Left" Height="22" Margin="60,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20">
            <Image Source="imagenes\anterior.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Height="22" Margin="85,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20">
            <Image Source="imagenes\atras.png"/>
        </Button>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="110,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>
        <Button HorizontalAlignment="Left" Height="22" Margin="179,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20">
            <Image Source="imagenes\avance-rapido.png"/>
        </Button>
        <Button HorizontalAlignment="Left" Height="22" Margin="204,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="20" >
            <Image Source="imagenes\delante.png"/>
        </Button>
        <Label Content="de" HorizontalAlignment="Left" Height="33" Margin="229,6,0,11" Grid.Row="2" VerticalAlignment="Center" Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="pgs" HorizontalAlignment="Left" Height="33" Margin="254,6,0,11" Grid.Row="2" VerticalAlignment="Center" Width="38" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Registro:" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="2" Width="55" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>


    </Grid>
</UserControl>
