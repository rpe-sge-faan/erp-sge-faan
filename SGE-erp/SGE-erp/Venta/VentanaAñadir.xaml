<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Venta"
    xmlns:SGE_erp="clr-namespace:SGE_erp"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    x:Class="SGE_erp.Venta.VentanaAñadir"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <SGE_erp:SetaData
            x:Key="setaData" />
        <CollectionViewSource
            x:Key="proveedorArticuloViewSource"
            Source="{Binding ProveedorArticulo, Source={StaticResource setaData}}" />
        <CollectionViewSource
            x:Key="clientesViewSource"
            Source="{Binding Clientes, Source={StaticResource setaData}}" />
    </UserControl.Resources>
    <Grid
        DataContext="{StaticResource proveedorArticuloViewSource}">
        <Grid.Background>
            <SolidColorBrush
                Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
        </Grid.ColumnDefinitions>
        <Label Content="Nombre cliente" Grid.Column="2" Margin="10,10,20,10" VerticalAlignment="Center" Height="37" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="16"/>
        <Label Content="Cantidad" Grid.Column="2" Margin="10,0,20,10" Grid.Row="1" VerticalAlignment="Bottom" Height="37" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="16"/>
        <Button Content="Añadir" Grid.Column="3" Margin="12,10,18,10" Grid.Row="3" VerticalAlignment="Stretch"/>

        <DataGrid Margin="10,10,20,16" Grid.RowSpan="3" Grid.ColumnSpan="3" Grid.Row="5">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Código Artículo"
                    Width="100" />
                <DataGridTextColumn
                    Header="Código Compra"
                    Width="100" />
                <DataGridTextColumn
                    Header="Precio del Artículo"
                    Width="*" />
                <DataGridTextColumn
                    Header="Cantidad"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <CheckBox
            Content="Generar Factura"
            Grid.Column="3"
            Margin="43,0,0,24"
            Grid.Row="5"
            VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="104" Height="15" VerticalAlignment="Bottom" />
        <Button
            Content="Confirmar compra"
            Grid.Column="3"
            Margin="12,10,18,10"
            Grid.Row="6" />

        <Grid
            x:Name="grid1"
            Grid.Column="3"
            DataContext="{StaticResource clientesViewSource}"
            HorizontalAlignment="Center"
            Margin="10"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ComboBox
                x:Name="nombreComboBox"
                Grid.Column="1"
                DisplayMemberPath="Nombre"
                ItemsSource="{Binding}"
                Margin="-82,0,-83,0"
                Grid.Row="0">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
        </Grid>


        <xctk:UIntegerUpDown
            Grid.Column="3"
            Margin="43,0,53,17"
            Grid.Row="1" Height="20" VerticalAlignment="Bottom" />
        <DataGrid 
            x:Name="DatosAnadir" 
            Margin="10" 
            Grid.RowSpan="5"
            Grid.ColumnSpan="2"
            ColumnWidth="1*"
        />


    </Grid>
</UserControl>
