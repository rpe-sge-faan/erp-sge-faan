<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Venta"
    xmlns:SGE_erp="clr-namespace:SGE_erp"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    x:Class="SGE_erp.Venta.VentanaAñadir"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <SGE_erp:SetaData
            x:Key="setaData" />
        <CollectionViewSource
            x:Key="proveedorArticuloViewSource"
            Source="{Binding ProveedorArticulo, Source={StaticResource setaData}}" />
        <CollectionViewSource
            x:Key="clientesViewSource"
            Source="{Binding Clientes, Source={StaticResource setaData}}" />
    </UserControl.Resources>
    <Grid
        DataContext="{StaticResource proveedorArticuloViewSource}">
        <Grid.Background>
            <SolidColorBrush
                Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="1*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
        </Grid.ColumnDefinitions>
        <Label Content="Nombre cliente" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="170" Height="37" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="16"/>
        <Label Content="Cantidad" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="37" Width="170" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="16"/>
        <Button Content="Añadir" Grid.Column="3" HorizontalAlignment="Left" Margin="12,10,0,10" Grid.Row="3" VerticalAlignment="Stretch" Width="170"/>

        <DataGrid Margin="10,10,20,16" Grid.RowSpan="3" Grid.ColumnSpan="3" Grid.Row="5">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Código Artículo"
                    Width="100" />
                <DataGridTextColumn
                    Header="Código Compra"
                    Width="100" />
                <DataGridTextColumn
                    Header="Precio del Artículo"
                    Width="*" />
                <DataGridTextColumn
                    Header="Cantidad"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <CheckBox
            Content="Generar Factura"
            Grid.Column="3"
            Margin="10,10,20,16"
            Grid.Row="5"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <Button
            Content="Confirmar compra"
            Grid.Column="3"
            HorizontalAlignment="Left"
            Margin="12,10,0,10"
            Grid.Row="6"
            Width="170" />
        <ListView
            x:Name="proveedorArticuloListView"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding}"
            Margin="10,10,15,15"
            Grid.RowSpan="5"
            SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style>
                    <Setter
                        Property="Control.HorizontalContentAlignment"
                        Value="Stretch" />
                    <Setter
                        Property="Control.VerticalContentAlignment"
                        Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        x:Name="id_ElementoColumn"
                        Header="Id Elemento"
                        Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox
                                    Margin="6,-1,-6,-1"
                                    Text="{Binding Id_Elemento, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        x:Name="pVPColumn"
                        Header="PVP"
                        Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox
                                    Margin="-6,-1"
                                    Text="{Binding PVP, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        x:Name="stockColumn"
                        Header="Stock"
                        Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox
                                    Margin="-6,-1"
                                    Text="{Binding Stock, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid
            x:Name="grid1"
            Grid.Column="3"
            DataContext="{StaticResource clientesViewSource}"
            HorizontalAlignment="Center"
            Margin="10"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>

            <ComboBox
                x:Name="nombreComboBox"
                Grid.Column="1"
                DisplayMemberPath="Nombre"
                Height="20"
                ItemsSource="{Binding}"
                Margin="3,0,0,0"
                Grid.Row="0"
                VerticalAlignment="Top" Width="170" HorizontalAlignment="Left">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
        </Grid>


        <xctk:UIntegerUpDown
            Grid.Column="3"
            HorizontalAlignment="Left"
            Margin="15,20,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            Width="170" />


    </Grid>
</UserControl>
