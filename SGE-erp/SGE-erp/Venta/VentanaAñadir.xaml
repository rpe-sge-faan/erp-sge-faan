<UserControl
    x:Class="SGE_erp.Venta.VentanaAñadir"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SGE_erp="clr-namespace:SGE_erp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Venta"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <SGE_erp:SetaData x:Key="setaData" />
        <CollectionViewSource x:Key="proveedorArticuloViewSource" Source="{Binding ProveedorArticulo, Source={StaticResource setaData}}" />
        <CollectionViewSource x:Key="clientesViewSource" Source="{Binding Clientes, Source={StaticResource setaData}}" />
        <CollectionViewSource x:Key="empleadosViewSource" Source="{Binding Empleados, Source={StaticResource setaData}}" />
    </UserControl.Resources>
    <Grid DataContext="{StaticResource proveedorArticuloViewSource}">
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />
            <RowDefinition Height="56*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="2"
            Grid.Column="2"
            Height="37"
            Margin="10,9,10,10"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Nombre cliente"
            FontSize="16"
            RenderTransformOrigin="0.472,3.627" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Height="37"
            Margin="10,0,10,10"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Cantidad"
            FontSize="16" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Margin="13,10,10,10"
            VerticalAlignment="Stretch"
            Click="Anadir_Click"
            Content="Añadir" />
        <Button
            Grid.Row="7"
            Grid.Column="3"
            Margin="10,10,20,10"
            Click="Insertar_Click"
            Content="Confirmar compra" />

        <Grid
            x:Name="grid1"
            Grid.Column="3"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            DataContext="{StaticResource clientesViewSource}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        </Grid>


        <xctk:UIntegerUpDown
            x:Name="udStock"
            Grid.Row="1"
            Grid.Column="3"
            Height="30"
            Margin="45,0,55,10"
            VerticalAlignment="Bottom" />
        <DataGrid
            x:Name="DatosAnadir"
            Grid.RowSpan="4"
            Grid.ColumnSpan="2"
            Margin="10"
            ColumnWidth="1*"
            IsReadOnly="True"
            SelectionChanged="DatosAnadir_SelectionChanged" />
        <DataGrid
            x:Name="dgFinal"
            Grid.Row="4"
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            Margin="10"
            ColumnWidth="1*"
            IsReadOnly="True" />
        <ComboBox
            x:Name="nombreComboBox"
            Grid.Row="2"
            Grid.Column="3"
            Margin="10,9,10,11"
            DisplayMemberPath="Nombre"
            ItemsSource="{Binding}"
            Loaded="nombreComboBox_Loaded">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <Label
            Grid.Column="2"
            Height="36"
            Margin="0,10,0,11"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Nombre empleado"
            FontSize="16"
            RenderTransformOrigin="0.472,3.627" />

        <ComboBox
            x:Name="nombreComboBox1"
            Grid.Row="0"
            Grid.Column="3"
            Height="37"
            Margin="10,10,10,0"
            VerticalAlignment="Top"
            DisplayMemberPath="Nombre"
            ItemsSource="{Binding}"
            Loaded="nombreComboBox1_Loaded">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <DatePicker x:Name="dpFecha" Grid.Column="3" HorizontalAlignment="Left" Height="36" Margin="13,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="177"/>
        <Label x:Name="lbTotalFin"  Grid.Column="3" HorizontalAlignment="Left" Height="36" Margin="13,10,0,0" Grid.Row="6" VerticalAlignment="Top" Width="167"/>
        <ComboBox x:Name="cbFormaPago"  Grid.Column="3" HorizontalAlignment="Left" Height="36" Margin="13,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="177" Loaded="cbFormaPago_Loaded"/>


    </Grid>
</UserControl>