<UserControl x:Class="SGE_erp.Venta.VentanaAñadir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGE_erp.Venta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="29" Margin="10,16,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="170"/>
        <Label Content="Nombre cliente" Grid.Column="3" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="170" Height="37" VerticalContentAlignment="Center" FontSize="16"/>
        <Label Content="Cantidad" Grid.Column="3" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Height="38" Width="170" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="16"/>
        <ComboBox Grid.Column="2" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="170" Height="30"/>
        <ComboBox Grid.Column="2" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="2" VerticalAlignment="Top" Width="170" Height="30"/>
        <Label Content="IVA" Grid.Column="3" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="2" VerticalAlignment="Top" Height="30" Width="170" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="16"/>
        <Button Content="Añadir" Grid.Column="2" HorizontalAlignment="Left" Margin="10,2,0,18" Grid.Row="3" VerticalAlignment="Stretch" Width="170"/>
        <DataGrid Margin="10,10,20,18" Grid.RowSpan="4" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Código Artículo" Width="100" />
                <DataGridTextColumn Header ="Nombre del Artículo" Width="*" />
                <DataGridTextColumn Header ="Precio del Artículo" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Margin="10,10,20,16" Grid.RowSpan="3" Grid.ColumnSpan="3" Grid.Row="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Código Artículo" Width="100" />
                <DataGridTextColumn Header ="Código Compra" Width="100" />
                <DataGridTextColumn Header ="Precio del Artículo" Width="*" />
                <DataGridTextColumn Header ="Cantidad" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <CheckBox Content="Generar PDF" Grid.Column="3" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="4" VerticalAlignment="Top" Width="170" Height="30" VerticalContentAlignment="Center"/>
        <Button Content="Confirmar compra" Grid.Column="3" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="6" VerticalAlignment="Top" Width="170" Height="30"/>


    </Grid>
</UserControl>
