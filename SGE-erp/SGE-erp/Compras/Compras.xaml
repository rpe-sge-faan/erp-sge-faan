<UserControl
    x:Class="SGE_erp.Compras.Compras"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Compras"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#FFFFC733"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            x:Name="tabControlCompras"
            Margin="5,5,5,0"
            TabStripPlacement="Bottom">
            <TabItem
                x:Name="anadir"
                Width="100"
                Margin="0,5,5,5"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Añadir">
                <local:ComprasAnadir />
            </TabItem>
            <TabItem
                x:Name="visualizar"
                Width="100"
                Margin="0,5,5,5"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Ver">
                <local:ComprasVisualizar />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
