<UserControl
    x:Class="SGE_erp.Compras.Compras"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Compras"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource colorCompras}"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            x:Name="tabControlCompras"
            Margin="5,5,5,0"
            TabStripPlacement="Bottom">
            <TabItem
                x:Name="anadir"
                Width="100"
                Margin="0,5,5,5"
                FontSize="13"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Añadir">
                <local:ComprasAnadir
                    x:Name="uc1" />
            </TabItem>
            <TabItem
                x:Name="tab2"
                Width="100"
                Margin="0,5,5,5"
                FontSize="13"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Ver">
                <local:ComprasVisualizar
                    x:Name="uc2" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
