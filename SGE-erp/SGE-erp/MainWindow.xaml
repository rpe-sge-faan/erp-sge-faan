<Window
    x:Class="SGE_erp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp"
    xmlns:localGestion="clr-namespace:SGE_erp.Gestion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Compras"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="300"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />

        </Grid.RowDefinitions>
        <TabControl
            Grid.Row="0"
            Margin="5,5,5,5"
            BorderThickness="0"
            TabStripPlacement="Top">
            <TabControl.Resources>
                <Style x:Key="TabItemStyle1" TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}" />
                                    <ContentPresenter
                                        x:Name="contentPresenter"
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                        VerticalAlignment="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                        ContentSource="Header"
                                        Focusable="False"
                                        RecognizesAccessKey="True"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <!--<Condition Property="IsMouseOver" Value="True" />-->
                                            <Condition Property="x:Name" Value="tabGestion" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabGestion, Path=Background}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <Condition Property="x:Name" Value="tabVentas" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabVentas, Path=Background}" />
                                            <Setter TargetName="Border" Property="Margin" Value="0,0,0,0" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <Condition Property="x:Name" Value="tabCompras" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabCompras, Path=Background}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <Condition Property="x:Name" Value="tabArticulos" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabArticulos, Path=Background}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <Condition Property="x:Name" Value="tabAdministracion" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabAdministracion, Path=Background}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True" />
                                            <Condition Property="x:Name" Value="tabAyuda" />
                                        </MultiTrigger.Conditions>
                                        <MultiTrigger.Setters>
                                            <Setter TargetName="Border" Property="Background" Value="{Binding ElementName=tabAyuda, Path=Background}" />
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem
                x:Name="tabCompras"
                Margin="0,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#FFFFC733"
                Header="_Compras"
                Style="{DynamicResource TabItemStyle1}" />
            <TabItem
                x:Name="tabVentas"
                Margin="5,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="CornflowerBlue"
                Header="_Ventas"
                Style="{DynamicResource TabItemStyle1}">
                <local:Ventas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>
            <TabItem
                x:Name="tabArticulos"
                Margin="5,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="_Artículos"
                Style="{DynamicResource TabItemStyle1}" />
            <TabItem
                x:Name="tabGestion"
                Margin="5,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="IndianRed"
                Header="_Gestión"
                Style="{DynamicResource TabItemStyle1}">
                <localGestion:GestionMain />
            </TabItem>
            <TabItem
                x:Name="tabAdministracion"
                Margin="5,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="LightYellow"
                Header="A_dministración"
                Style="{DynamicResource TabItemStyle1}" />
            <TabItem
                x:Name="tabAyuda"
                Margin="5,5,5,5"
                Padding="20,10,20,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="LightPink"
                Header="A_yuda"
                Style="{DynamicResource TabItemStyle1}" />
        </TabControl>

        <Grid Grid.Row="1">
            <TabControl
                Margin="5,5,5,5"
                BorderThickness="0"
                TabStripPlacement="Top">
                <TabItem
                    Margin="0,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#FFFFC733"
                    Header="_Compras" />
                <TabItem
                    Margin="5,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="CornflowerBlue"
                    Header="_Ventas">
                    <local:Ventas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                </TabItem>
                <TabItem
                    Margin="5,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Header="_Artículos" />
                <TabItem
                    Margin="5,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="IndianRed"
                    Header="_Gestión" />
                <TabItem
                    Margin="5,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="LightYellow"
                    Header="A_dministración" />
                <TabItem
                    Margin="5,5,5,5"
                    Padding="20,10,20,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="LightPink"
                    Header="A_yuda" />
            </TabControl>
        </Grid>


    </Grid>
</Window>