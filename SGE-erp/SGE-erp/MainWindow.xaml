<Window
    x:Class="SGE_erp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SGE-ERP-FAAN" Width="1000" Height="720" mc:Ignorable="d" WindowStartupLocation="CenterScreen">
    <Grid >
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <TabItem Header="Compras">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ventas">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Articulos">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="185*"/>
                        <ColumnDefinition Width="801*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Administracion">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Gestion">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="140*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Ayuda">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
