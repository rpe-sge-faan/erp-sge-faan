<Window
    x:Class="SGE_erp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SGE-ERP-FAAN" Width="1000" Height="720" mc:Ignorable="d" WindowStartupLocation="CenterScreen">
    <Grid >
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <TabItem Header="Compras">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ventas">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Proveedores">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Clientes">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Stock">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Boton" Height="100" Width="100"/>
                </Grid>
            </TabItem>
            <TabItem Header="Empleados">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
