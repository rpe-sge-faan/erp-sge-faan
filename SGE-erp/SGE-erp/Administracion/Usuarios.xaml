<UserControl x:Class="SGE_erp.Administracion.Usuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGE_erp.Administracion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="2.5*" />
            <ColumnDefinition
                Width="0.75*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="4*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition
                Height="0.2*" />
        </Grid.RowDefinitions>
        <DataGrid
            x:Name="dataGridUsuarios"
            Grid.RowSpan="8"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ColumnWidth="1*"
            IsReadOnly="True" />
        <Button
            x:Name="bAnadir"
            Grid.Row="4"
            Grid.Column="2"
            Margin="5"
            VerticalAlignment="Center"   
            Content="Añadir"  />
        <Button
            x:Name="bEditar"
            Grid.Row="5"
            Grid.Column="2"
            VerticalAlignment="Center"
            Margin="5"
            Content="Editar" />
        <Button
            x:Name="bReset"
            Grid.Row="0"
            VerticalAlignment="Center"
            Grid.Column="2"
            Margin="110,0,0,110"
            Content="Reset" 
            Click="bReset_Click"/> 
        <Button
            x:Name="bBorrar"
            Grid.Row="6"
            VerticalAlignment="Center"
            Grid.Column="2"
            Margin="5"
            Content="Borrar" />


        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="5,0"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Content="Contraseña"
            FontSize="14" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,0"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Content="Usuario"
            FontSize="14" />

        <TextBox
            x:Name="tbProv"
            Grid.Row="3"
            Grid.Column="2"
            Margin="5" />
        <TextBox
            x:Name="tbPobla"
            Grid.Row="2"
            Grid.Column="2"
            Margin="5" />
        

    </Grid>
    
</UserControl>
