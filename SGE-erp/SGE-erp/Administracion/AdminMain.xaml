<UserControl
    x:Class="SGE_erp.Administracion.AdminMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SGE_erp.Administracion"
    mc:Ignorable="d"
    Background="{DynamicResource colorAdmin}"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TabControl
            x:Name="tabControl"
            Margin="5,5,5,0"
            TabStripPlacement="Bottom">
            <TabItem
                Width="100"
                Margin="0,5,5,5"
                FontSize="13"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Poblaciones">
                <local:Poblacions />
            </TabItem>
            <TabItem
                Width="100"
                Margin="0,5,5,5"
                FontSize="13"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="Usuarios">
                <local:Usuarios />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
